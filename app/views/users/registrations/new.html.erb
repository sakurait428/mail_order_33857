<div class="wrapper">
  <div class="pan">ホーム > オンラインショップ > 会員登録(入力ページ)</div>
  <h1 class="page-title ">会員登録(入力ページ)</h1>
</div>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>
  <div class="table">
    <div class="table_l">お名前</div>
    <div class="table_r">性<%= f.text_field :last_name, class:"box20", id:"last_name", maxlength:"10" %>
                        名<%= f.text_field :first_name, class:"box20", id:"first_name", maxlength:"10" %></div>
    <div class="table_l">お名前(フリガナ)</div>
    <div class="table_r">セイ<%= f.text_field :last_name_kana, class:"box20", id:"last_name_kana", maxlength:"10" %>
                        メイ<%= f.text_field :first_name_kana, class:"box20", id:"first_name_kana", maxlength:"10" %></div>
    <div class="table_l">郵便番号</div>
    <div class="table_r">〒<%= f.text_field :postal_code, class:"box10", id:"postal_code", maxlength:"3" %> - 
                        <%= f.text_field :postal_code, class:"box10", id:"postal_code", maxlength:"4" %>
                        <a href="//www.post.japanpost.jp/zipcode/" target="_blank" class="mini">郵便番号検索</a></div>
    <div class="table_l">住所</div>
    <div class="table_r"><%= f.collection_select(:prefecture_id, Prefecture.all, :id, :name, {}, {class:"select-box", id:"item-prefecture"}) %><br>
                        <%= f.text_field :city, class:"box80", id:"city", maxlength:"40" %><br>
                        市区町村名 (例：千代田区神田神保町)<br>
                        <%= f.text_field :address, class:"box80", id:"address", maxlength:"40" %><br>
                        番地・ビル名 (例：1-3-5)<br>
                        <span class="red mini">住所は2つに分けてご記入ください。マンション名は必ず記入してください。</span></div>
    <div class="table_l">電話番号</div>
    <div class="table_r"><%= f.text_field :phone_number, class:"box80", id:"phone_number", maxlength:"40" %></div>
    <div class="table_l">メールアドレス</div>
    <div class="table_r"><%= f.email_field :email, class:"box80", autofocus: true, autocomplete: "email" %></div>
    <div class="table_l">生年月日</div>
    <div class="table_r"><%= raw sprintf(
        f.date_select(
          :user_birth_date,
          class:'select-birth',
          id:"birth-date",
          use_month_numbers: true,
          prompt:'--',
          start_year: 1930,
          end_year: (Time.now.year - 5),
          date_separator: '%s'),
        "<span> 年 </span>", "<span> 月 </span>") + "<span> 日 </span>" %></div>
    <div class="table_l">希望するパスワード</div>
    <div class="table_r"><% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %></div>
      <div class="table_l">希望するパスワード（確認用）</div>
    <div class="table_r"><%= f.password_field :password_confirmation, autocomplete: "new-password" %></div>
    <div class="table_l">会員規約</div>
    <div class="table_r"><%= render "users/shared/kiyaku" %>
    <%= f.check_box :accepted ,{},checked_value = "true",unchecked_value = "false" %>
    <%= f.label :accepted, '同意する' %></div>
  </div>
  <div class="wrapper">
    <%= f.submit "新規登録をする", :class=>"btn"  %>
  </div>
<% end %>