<div class="wrapper">
  <div class="pan entry-title top_margin30">
    <%= link_to "ホーム", root_path, class: :"blue" %> > 
    <%= link_to "オンラインショップ", "#", class: :"blue" %> > 
    <%= link_to @item.category.root.name, item_category_one_path(id: @item.category.root.id), class: :"blue" %> > 
    <%= link_to @item.category.parent.name, item_category_two_path(id: @item.category.parent.id), class: :"blue" %> > 
    <%= link_to @item.category.name, item_category_three_path(id: @item.category.id), class: :"blue" %> > 
    <%= @item.name %>
  </div>
</div>

<div class="item_container">
  <div class="items_show_sub">
    <% @item.images.each do |image| %>
      <%= image_tag image.variant(resize: '600x600'), class:'images' if @item.images.attached? %>
    <% end %>
  </div>
  <div class="items_show_main">
    <% @item.images.first(1).each do |image| %>
      <%= image_tag image.variant(resize: '600x600'), class:'images' if @item.images.attached? %>
    <% end %>
  </div>
</div>

<% if request.referer.include?('/items/') %>
  <h3 class="wrapper red text_center top_space30">
    <% flash.each do |key, value| %><%= content_tag(:span, value, class: key) %><% end %>
  </h3>
<% end %>

<div class="wrapper">
  <div class="item_title_container">
    <div class="item_title">
      <%= @item.info_brand%><br>
      <span class="item_price"><%= @item.name%></span><br>
      <span class="mini">販売価格：</span>￥<%= @item.price.to_s(:delimited)%><br>
      <% if @item.stock_quantity == 0 %>
        <span class="red bold">SOLDOUT</span>
      <% else %>
        <span class="mini">在庫数：<%= @item.stock_quantity %>個</span>
      <% end %>
    </div>
    
      <div class="item_title">
        <% if user_signed_in? && (@item.stock_quantity >= 1) %>
          <%= form_with url: add_item_path(item_id: @item.id, cart_id: params[:cart_id], user_id: current_user.id, stock_quantity: @item.stock_quantity), local: true do |f| %>
            <%= select_tag :quantity, options_for_select((1..10).to_a), class:"box40" %><br>
            <%= f.submit "カートに入れる", class:"black_btn", style:"width: 160px; margin-top:10px" %>
          <% end %>
        <% end %><br>
        <% if admin_signed_in? %>
          <%= link_to "削除", item_path(@item.id), method: :delete, class:"white_btn" %><br>
        <% end %>
          <%= link_to "お問い合わせ", new_inquire_path(item_id: @item.id, item_name: @item.name), class:"white_btn" %>
    </div>
  </div>
  <div class="item_product">
    <span class="mini bold">商品説明：</span><%= @item.info_product%>
  </div>
  <div class="item_brand">
    <span class="mini bold">ブランド：</span><%= @item.info_brand%>
  </div>
  <div class="item_material">
    <span class="mini bold">素材：</span><%= @item.info_material%>
  </div>
  <div class="item_size">
    <span class="mini bold">サイズ：</span><%= @item.info_size%><br>
    <span class="mini">※表示は全てcmになります。平置きにて採寸しておりますので多少の誤差はご容赦ください。
      <span class="blue"><%= link_to "■サイズ ガイド", "#" %></span></span>
  </div>
</div>

<div class="wrapper">
  <div class="top_space60 border sub_title" >
    RELEVANCE ITEM
  </div>
</div>

<div class="wrapper items_index">
  <% @items.last(9).each do |item| %>
    <% if ( item.category_id == @item.category.id ) && ( item.id != @item.id )%>
      <div class="item_index">
        <% item.images.first(1).each do |image| %>
          <%= link_to item_path(item.id) do %>
            <%= image_tag image.variant(resize: '300x300'), class:'images' if item.images.attached? %>
          <% end %>
        <% end %>
        <p>
          <%= link_to item_path(item.id) do %>
            <%= item.name%><br>
          <% end %>
            ￥<%= item.price.to_s(:delimited)%>
        </p>
      </div>
    <% end %>
  <% end %>
</div>

<div class="wrapper">

</div>