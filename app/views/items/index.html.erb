<div class="wrapper">
  <div class="index_title top_space30">
    ＮＥＷ ＩＴＥＭ
  </div>
</div>

<div class="wrapper items_index">
  <% @items.first(9).each do |item| %>
      <div class="item_index">
        <% item.images.first(1).each do |image| %>
          <%= link_to item_path(item.id) do %>
            <%= image_tag image.variant(resize: '300x300'), class:'images' if item.images.attached? %>
          <% end %>
        <% end %>
        <p class="mini">
          <%= link_to item_path(item.id) do %>
            <%= item.info_brand %><br>
            <%= item.name%><br>
          <% end %>
            販売価格：￥<%= item.price.to_s(:delimited)%>
        </p>
        <% if item.stock_quantity == 0 %>
          <p class="red bold mini">SOLDOUT</p>
        <% end %>
      </div>
  <% end %>
</div>

<div class="wrapper">
  <div class="top_space30">
    <%= link_to "> ＭＯＲＥ", item_all_path, class:"more_btn box_center" %>
  </div>
</div>

