<div class="wrapper items_index">
  <% @items.last(9).each do |item| %>
      <div class="item_index">
        <% item.images.first(1).each do |image| %>
          <%= link_to item_path(item.id) do %>
            <%= image_tag image.variant(resize: '300x300'), class:'images' if item.images.attached? %>
          <% end %>
        <% end %>
        <p>
          <%= link_to item_path(item.id) do %>
            <%= item.name%><br>
          <% end %>
            ￥<%= item.price.to_s(:delimited)%>
        </p>
        <% if item.stock_quantity == 0 %>
          <p class="red bold">SOLDOUT</p>
        <% end %>
      </div>
  <% end %>
</div>

