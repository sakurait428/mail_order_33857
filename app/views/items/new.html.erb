<div class ="wrapper">

<% @item.images.each do |image| %>
  <%= image_tag image, class: 'images' %>
<% end %>

  <%= form_with model: @item, id: "new_item" , url: items_path, local: true do |f| %>
    <div id="image-list"></div>
    <br>商品画像
    <%= f.file_field :image, name: 'item[images][]', id: 'item_image_1' %><br>
    <%= f.file_field :image, name: 'item[images][]', id: 'item_image_2' %><br>
    <%= f.file_field :image, name: 'item[images][]', id: 'item_image_3' %><br>
    <%= f.file_field :image, name: 'item[images][]', id: 'item_image_4' %><br>
    <%= f.file_field :image, name: 'item[images][]', id: 'item_image_5' %><br>
    <%= f.file_field :image, name: 'item[images][]', id: 'item_image_6' %><br>
    <br>商品名
    <%= f.text_field :name, class:"box", id:"item-name", maxlength:"40" %><br>
    <br>商品の説明
    <%= f.text_field :info_product, class:"box", id:"info_product", maxlength:"40" %><br>
    <br>ブランド
    <%= f.text_field :info_brand, class:"box", id:"info_brand", maxlength:"40" %><br>
    <br>素材
    <%= f.text_field :info_material, class:"box", id:"info_material", maxlength:"40" %><br>
    <br>サイズ
    <%= f.text_field :info_size, class:"box", id:"info_size", maxlength:"40" %><br>
    <br>カテゴリー
    <%= f.collection_select(:category_id, Category.all, :id, :name, {include_blank: '-----'}, {class:"select-box", id:"item-category"}) %><br>
    <br>販売価格
    <%= f.text_field :price, class:"box", id:"item-price", maxlength:"40" %><br>
    <%= f.submit "出品する" ,class:"sell-btn" %>
    <%= link_to "もどる", root_path %>

  <% end %>

</div>